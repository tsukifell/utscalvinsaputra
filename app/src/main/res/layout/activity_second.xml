<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="6dp"
    tools:context=".SecondActivity">

    <TextView
        android:id="@+id/tv_konfirmasi_pendaftaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KONFIRMASI PENDAFTARAN"
        android:textStyle="bold"
        android:textSize="26sp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="72dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/tv_konfirmasi_pendaftaran"/>

    <TextView
        android:id="@+id/tv_nomor_pendaftaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nomor Pendaftaran"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:textSize="18sp"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/tv_nama"/>

    <TextView
        android:id="@+id/tv_jalur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jalur Pendaftaran"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/tv_nomor_pendaftaran"/>


</RelativeLayout>